{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/sync-products-cron",
      "schedule": "50 23 * * *"
    },
    {
      "path": "/api/sync-web-content-cron",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cleanup-old-conversations-cron",
      "schedule": "0 3 * * *"
    }
  ]
}
